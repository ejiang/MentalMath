<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<GridPane id="GridPane" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="MentalMathFX.FormController">
  <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

  <Text text="Mental Math Test"
    GridPane.columnIndex="0"
    GridPane.rowIndex="0"
    GridPane.columnSpan="2"
    GridPane.rowSpan="1">
    <font>
      <Font name="Tahoma" size="20.0" />
    </font>
  </Text>

  <Label text="Question:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
  <TextField fx:id="qField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

  <Label text="Answer:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
  <TextField fx:id="aField" GridPane.columnIndex="1" GridPane.rowIndex="2"
    onKeyReleased="#aFieldHandle"/>

  <Label text="Length:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
  <TextField fx:id="lField" GridPane.columnIndex="1" GridPane.rowIndex="3"
    onKeyPressed="#lengthHandle"/>

  <Text text="Counter"
       GridPane.columnIndex="0" GridPane.rowIndex="4"/>

  <Text fx:id="countText"
         GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
